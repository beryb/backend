{% extends 'admin/base-granted.html.twig' %}

{% block title %}Klijenti{% endblock %}

{% block content %}

    <!-- Begin Page Content -->
    <div class="container-fluid client-list">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Klijenti</h1>
            <a href="{{ path('client_new') }}" class="btn btn-primary btn-icon-split">
                 <span class="icon text-white-50">
                     <i class="fas fa-plus"></i>
                 </span>
                <span class="text">Dodaj novi</span>
            </a>
        </div>

        <div class="card shadow mb-4">
            <div class="card-body">
                {% include 'admin/views/components/flashes.html.twig' %}

                {% if clients|length > 0 %}
                    <div class="table-responsive">
                        <table class="table data-table" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ime</th>
                                <th>Prezime</th>
                                <th>Aktivacijski kod</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.id }}</td>
                                    <td>{{ client.firstname }}</td>
                                    <td>{{ client.lastname }}</td>
                                    <td>{{ client.code }}</td>
                                    <td>
                                        <a href="{{ path('client_edit', {'id': client.id }) }}"
                                           class="btn btn-warning btn-circle btn-sm">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a href="{{ path('client_delete', {'id': client.id }) }}"
                                           class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-light">
                        Zapisi nisu dostupni.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}
